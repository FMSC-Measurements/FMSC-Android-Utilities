<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/primary</item>
        <item name="android:colorPrimary" tools:targetApi="21">@color/primary</item>

        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="android:colorPrimaryDark" tools:targetApi="21">@color/primaryDark</item>

        <item name="colorAccent">@color/accent</item>
        <item name="android:colorAccent" tools:targetApi="21">@color/accent</item>

        <item name="android:elevation" tools:targetApi="21" >@dimen/toolbar_elevation</item>


        <item name="android:windowTitleStyle">@style/DialogTitleStyle</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColorPrimary">@color/textDarkContent</item>
        <item name="android:textColorSecondary">@color/textDarkDisabled</item>
    </style>

    <style name="DialogTitleStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
</resources>