<?xml version="1.0" encoding="utf-8"?>
<!--
Rear view, which contains an accept image view that will be animated upon
checking. The rear view represents the "checked" state.
-->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fl_accept"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fcb__accept_color"
    android:padding="@dimen/fcb__rear_accept_image_padding" >

    <ImageView
        android:id="@+id/iv__card__accept"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        android:layout_gravity="center"
        android:gravity="center_horizontal"
        android:src="@drawable/ic_done_white_36dp"/>

</FrameLayout>